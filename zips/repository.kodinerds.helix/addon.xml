<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.kodinerds.helix"
		name="kodinerds.net Add-ons (Helix)"
		version="0.0.0.1"
		provider-name="Jugger">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
	<extension point="xbmc.addon.repository"
		name="kodinerds.net Add-on Repository (Helix)">
			<info compressed="true">http://repo.skinquantum.de/nerdsrepo/helix/addons.xml</info>
			<checksum>http://repo.skinquantum.de/nerdsrepo/helix/addons.xml.md5</checksum>
			<datadir zip="true">http://repo.skinquantum.de/nerdsrepo/helix</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install add-ons from kodinerds</summary>
		<summary lang="de">Installiere Add-ons von kodinerds</summary>
		<description>download and install add-ons from repository-kodinerds addon-repository.</description>
		<description lang="de">Downloade und installiere Add-ons vom repository-kodinerds Add-on-Repository.</description>
		<disclaimer>kodinerds.com hat die Add-ons nicht selber erstellt und haftet nicht für deren Inhalt.</disclaimer>
		<platform>all</platform>
		<broken>No longer avaiable</broken>
	</extension>
</addon>

